# KGraphPlanner Agent Configuration Template
# Copy this file to agent_config.yaml and customize for your needs

# Tool configuration
tools:
  # Tool server endpoint - required for all tools
  endpoint: "http://localhost:8008"
  
  # List of enabled tools - only enabled tools are enabled
  enabled:
    - google_web_search_tool  # Use ToolNameEnum.GOOGLE_WEB_SEARCH_TOOL.value
    - place_search_tool       # Use ToolNameEnum.PLACE_SEARCH_TOOL.value
    - google_address_validation_tool  # Use ToolNameEnum.GOOGLE_ADDRESS_VALIDATION_TOOL.value
    - weather_tool            # Use ToolNameEnum.WEATHER_TOOL.value
  
  # Tool-specific configurations
  web_search:
    default_num_results: 5
    max_results: 20

# Agent configuration
agent:
  name: "KGraphPlanner Agent"
  description: "AI agent with planning and tool capabilities"
  
  # Model configuration
  model:
    provider: "openai"
    name: "gpt-4"
    temperature: 0.7
    max_tokens: 4096

# Logging configuration
logging:
  level: "INFO"
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  
# Optional: Checkpointing configuration
checkpointing:
  enabled: true
  backend: "memory"  # or "file", "redis", etc.
  
# Optional: Memory configuration
memory:
  enabled: true
  max_history: 100